# Database Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.operixml.com

# ML Configuration
ML_MODEL_PATH=./models/
ML_FEATURE_CACHE_TTL=3600
OPENAI_API_KEY=your_openai_api_key_here

# Notification Configuration
NOTIFICATION_CACHE_TTL=3600
DEFAULT_NOTIFICATION_LANGUAGE=es

# LLM / Embedding Configuration (Phase 3)
# Embedding model used by vector enrichment and semantic cache
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=384

# LLM defaults and budget controls
LLM_DEFAULT_MODEL=gpt-4
LLM_FALLBACK_MODELS=gpt-3.5-turbo
LLM_MAX_COST_PER_REQUEST=0.10
LLM_DAILY_BUDGET=50.00
LLM_CACHE_TTL=3600
LLM_CIRCUIT_BREAKER_WINDOW=60
LLM_CIRCUIT_BREAKER_THRESHOLD=5
LLM_CIRCUIT_BREAKER_OPEN_SECONDS=120
LLM_CONFIDENCE_THRESHOLD=0.8
LLM_HUMAN_REVIEW_THRESHOLD=0.6

# Note: keep OPENAI_API_KEY (or other vendor keys) in your secret manager or .env for staging only
